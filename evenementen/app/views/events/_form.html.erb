<%= form_for @event do |f| %>
  <div class="form-group">
    <%= f.text_field :title, :class => "form-control", :placeholder => :title, :required => "true" %>
  </div>

  <%= f.text_area :text,
      :class => "form-control",
      :placeholder => :text,
      :required => true,
      :rows => "10" %>

  <div class="form-group">
    <%= f.label :startdate %><br>
    <%= f.datetime_select :startdate, start_year: 2015, end_year: 2065 %>
  </div>

  <div class="form-group">
    <%= f.label :enddate %><br>
    <%= f.datetime_select :enddate, start_year: 2015, end_year: 2065 %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create event', :class => "btn btn-success" %>
  </div>
<% end %>
