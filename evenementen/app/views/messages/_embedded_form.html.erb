<% if @people.size != 0 %>
  <%= form_for([@event, @event.messages.build]) do |f| %>
    <p>
      <%= f.label :person %><br />
      <%= f.select(:person_id) do %>
        <% @people.each do |p| -%>
          <%= content_tag(:option, p.name, value: p.id) %>
        <% end %>
      <% end %>
    </p>
    <p>
      <%= f.label :text %><br />
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.label :date %><br />
      <%= f.datetime_select :date, start_year: 1900, end_year: 2015 %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
<% else %>
  <p>
    <em><%= link_to 'Create a user', new_person_path(@person)%> to enable messages</em>
  </p>
<% end %>
