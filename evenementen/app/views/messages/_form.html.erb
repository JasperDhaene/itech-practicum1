<%= form_for @message do |f| %>
  <p>
    <%= f.label :person %><br />
    <%= f.select(:person_id) do %>
      <% @people.each do |p| -%>
        <%= content_tag(:option, p.name, value: p.id) %>
      <% end %>
    <% end %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
