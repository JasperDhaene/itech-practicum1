<%= form_for @person do |f| %>
  <% if @person.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <strong><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</strong>
    <ul>
    <% @person.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name,
            :class => "form-control",
            :placeholder => :name,
            :required => "true" %>
  </div>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">@</div>
      <%= f.email_field :email,
              :class => "form-control",
              :placeholder => :email,
              :required => "true" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :birthdate %>
    <br>
    <%= f.date_select :birthdate, start_year:
            Rails.application.config.start_year,
            end_year: Rails.application.config.end_year %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save',
            :class => "btn btn-success" %>
  </div>
<% end %>
